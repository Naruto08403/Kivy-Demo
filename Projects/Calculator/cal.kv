<MyButton@Button>:
    on_release:app.clicked(self.text)

BoxLayout:
    orientation:'vertical'
    padding:20
    spacing:20
    Label:
        text:'Kivy Calculator'
        size_hint_y:None
    TextInput:
        size_hint_y:None
        height:50
        id:textbox
    GridLayout:
        cols:4
        Button:
            text:'1'
            on_release:app.clicked(self.text)
        Button:
            text:'2'
            on_release:app.clicked(self.text)
        Button:
            text:'3'
            on_release:app.clicked(self.text)
        Button:
            text:'+'
            on_release:app.clicked(self.text)
        Button:
            text:'4'
            on_release:app.clicked(self.text)
        Button:
            text:'5'
            on_release:app.clicked(self.text)
        Button:
            text:'6'
            on_release:app.clicked(self.text)
        Button:
            text:'-'
            on_release:app.clicked(self.text)
        Button:
            text:'7'
            on_release:app.clicked(self.text)
        Button:
            text:'8'
            on_release:app.clicked(self.text)
        Button:
            text:'9'
            on_release:app.clicked(self.text)
        Button:
            text:'x'
            on_release:app.clicked(self.text)
        Button:
            text:'0'
            on_release:app.clicked(self.text)
        Button:
            text:'.'
            on_release:app.clicked(self.text)
        Button:
            text:'/'
            on_release:app.clicked(self.text)
        Button:
            text:'='
            on_release:app.clicked(self.text)